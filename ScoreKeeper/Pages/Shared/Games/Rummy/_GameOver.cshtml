@model ScoreKeeper.Pages.Games.RummyModel

<section id="rummy-game-over" class="menu-block-out">
    <div>
        <h2>Final Score</h2>
        <table>
            <tr>
                <th>@Model.Rummy.RummyPlayers[0].Player.Name</th>
                <th>@Model.Rummy.RummyPlayers[1].Player.Name</th>
            </tr>
            <tr>
                <td>@Model.GameOver.PlayerOneScore</td>
                <td>@Model.GameOver.PlayerTwoScore</td>
            </tr>
        </table>
        <div>
            <p>Congratulations</p>
            <p>@Model.GameOver.AWinnerIsYou</p>
        </div>
        <div>
            <form asp-page-handler="GameOver" method="post">
                <input class="link-button" type="submit" value="next game" />
            </form>
            <div class="link-button">
                <a asp-page="/Index">quit</a>
            </div>
        </div>
    </div>
</section>
